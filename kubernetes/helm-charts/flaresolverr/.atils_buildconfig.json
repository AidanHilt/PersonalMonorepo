{
  "actions": [
    {
      "name": "validate-buildconfig",
      "command": "check-jsonschema .atils_buildconfig.json --schemafile ../json-schemas/atils_buildconfig.json",
      "order": 0
    },
    {
      "name": "lint",
      "command": "helm lint",
      "order": 1
    },
    {
      "name": "update-dependencies",
      "command": "helm dependency update",
      "order": 2
    },
    {
      "name": "build",
      "command": "helm package .",
      "order": 3,
      "ci_only": true
    },
    {
      "name": "push",
      "command": "NAME=$(yq '.name' Chart.yaml) VERSION=$(yq '.version' Chart.yaml) && helm push ${NAME}-${VERSION}.tgz oci://registry-1.docker.io/aidanhilt",
      "order": 4,
      "ci_only": true
    }
  ],
  "action-sets": []
}