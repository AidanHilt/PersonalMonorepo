{
  "actions": [
    {
      "name": "validate_buildconfig",
      "command": "check-jsonschema .atils_buildconfig.json --schemafile ../../json-schemas/atils_buildconfig.json",
      "order": 0
    },
    {
      "name": "build",
      "command": ". config.env; docker buildx build --platform linux/arm64 . -t $IMAGE_NAME:latest --load",
      "order": 10,
      "description": "Build the docker image",
      "ci_only": true
    },
    {
      "name": "build-and-push",
      "command": ". config.env; docker buildx build --platform linux/arm64,linux/amd64 . -t $IMAGE_NAME:$IMAGE_TAG -t $IMAGE_NAME:latest --push",
      "order": 10,
      "description": "Build the docker image",
      "ci_only": true
    }
  ],
  "action_sets": [
    {
      "name": "validate",
      "actions": [
        "validate_buildconfig"
      ],
      "default": true
    },
    {
      "name": "ci-build-publish",
      "actions": [
        "build-and-push"
      ]
    }
  ]
}